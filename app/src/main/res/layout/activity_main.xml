<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF1A1A2E">

    <!-- 上半部：C3 视频流 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF000000">

        <android.webkit.WebView
            android:id="@+id/wv_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 视频上方叠加：连接状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#66000000"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_connection_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="未启动"
                android:textSize="13sp"
                android:textColor="#FF999999" />

            <TextView
                android:id="@+id/tv_c3_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="12sp"
                android:textColor="#99FFFFFF"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/tv_packet_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="#99FFFFFF"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 无视频时的提示 -->
        <TextView
            android:id="@+id/tv_video_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="等待连接 C3 视频..."
            android:textSize="16sp"
            android:textColor="#66FFFFFF" />

        <!-- HUD 导航信息条：道路名 + 剩余距离/时间 -->
        <LinearLayout
            android:id="@+id/hud_navi_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="52dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="#66000000"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_hud_road"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="13sp"
                android:textColor="#FFFFFFFF"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_hud_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#FF4CAF50"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- HUD 叠加层：速度 + ACC 状态 -->
        <LinearLayout
            android:id="@+id/hud_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#88000000"
            android:gravity="center_vertical"
            android:visibility="gone">

            <!-- 当前速度 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_hud_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:textColor="#FFFFFFFF"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km/h"
                    android:textSize="11sp"
                    android:textColor="#99FFFFFF" />
            </LinearLayout>

            <!-- 巡航速度 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_hud_cruise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="24sp"
                    android:textColor="#FF4CAF50"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="巡航"
                    android:textSize="11sp"
                    android:textColor="#99FFFFFF" />
            </LinearLayout>

            <!-- 档位 -->
            <TextView
                android:id="@+id/tv_hud_gear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:textSize="24sp"
                android:textColor="#FFFF9800"
                android:textStyle="bold"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- 跟车距离 -->
            <TextView
                android:id="@+id/tv_hud_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●●●"
                android:textSize="16sp"
                android:textColor="#FF2196F3"
                android:paddingEnd="8dp" />

            <!-- 红绿灯 -->
            <LinearLayout
                android:id="@+id/hud_tlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_hud_tlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="●"
                    android:textSize="28sp"
                    android:textColor="#FF666666" />
                <TextView
                    android:id="@+id/tv_hud_tlight_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#FFFFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- 下半部：控制面板 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 导航数据卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_navi_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等待高德导航数据..."
                    android:textSize="13sp"
                    android:textColor="#FFFF9800"
                    android:paddingBottom="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="道路"
                        android:textSize="12sp"
                        android:textColor="#99FFFFFF" />
                    <TextView
                        android:id="@+id/tv_road_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="限速"
                        android:textSize="12sp"
                        android:textColor="#99FFFFFF" />
                    <TextView
                        android:id="@+id/tv_speed_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="测速"
                        android:textSize="12sp"
                        android:textColor="#99FFFFFF" />
                    <TextView
                        android:id="@+id/tv_sdi_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="转弯"
                        android:textSize="12sp"
                        android:textColor="#99FFFFFF" />
                    <TextView
                        android:id="@+id/tv_tbt_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="GPS"
                        android:textSize="12sp"
                        android:textColor="#99FFFFFF" />
                    <TextView
                        android:id="@+id/tv_gps_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无定位"
                        android:textSize="12sp"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- 连接控制 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/et_manual_ip"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:hint="C3 IP 地址"
                    android:textColorHint="#66FFFFFF"
                    android:textColor="#FFFFFFFF"
                    android:background="@drawable/edit_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textSize="13sp"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btn_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="连接"
                    android:textSize="13sp"
                    android:textColor="#FFFFFFFF"
                    android:backgroundTint="#FF2196F3" />
            </LinearLayout>

            <!-- 启动/停止 + 调试按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn_start_stop"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="启动服务"
                    android:textSize="16sp"
                    android:textColor="#FFFFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="#FF4CAF50"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btn_debug"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="调试"
                    android:textSize="13sp"
                    android:textColor="#FFFFFFFF"
                    android:backgroundTint="#FF666666" />
            </LinearLayout>

            <!-- 调试面板（默认隐藏） -->
            <LinearLayout
                android:id="@+id/debug_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_debug_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂无广播数据"
                    android:textSize="10sp"
                    android:textColor="#66FFFFFF"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/btn_export_log"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="导出广播日志"
                    android:textSize="12sp"
                    android:textColor="#FFFFFFFF"
                    android:backgroundTint="#FFFF9800"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
